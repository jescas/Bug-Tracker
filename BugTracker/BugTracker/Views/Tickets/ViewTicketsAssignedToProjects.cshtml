@model ICollection<BugTracker.Models.Project>
@{
    ViewBag.Title = "ViewTicketsAssignedToProjects";
}

<h2>View Tickets Assigned To Projects</h2>

@foreach (var project in Model)
{
    <p>@project.Name</p>

    foreach (var ticket in project.Tickets)
    {
        <p>Ticket Title: @ticket.Title</p>
        <p>Ticket Description: @ticket.Description</p>
        <br />
        @Html.ActionLink("Edit", "Edit", new { id = ticket.Id })
        @Html.ActionLink("Add an Attachment", "Create", "TicketAttachments", new { id = ticket.Id })
        <br />
        <br />
    }

}